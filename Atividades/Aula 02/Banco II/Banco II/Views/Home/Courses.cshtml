@model IEnumerable<Banco_II.Models.Course>
@{
    ViewData["Title"] = "Cursos";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <!-- Header -->
            <div class="card shadow-sm mb-4 bg-gradient-info text-white">
                <div class="card-body text-center py-4">
                    <h1 class="display-5 mb-2">
                        <i class="fas fa-book-open me-3"></i>Gerenciamento de Cursos
                    </h1>
                    <p class="lead mb-0">Total de @Model.Count() curso(s) cadastrado(s)</p>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-tools me-2"></i>Ferramentas
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-auto">
                            <a asp-action="CreateCourse" class="btn btn-primary">
                                <i class="fas fa-plus-circle me-1"></i>Novo Curso
                            </a>
                        </div>
                        <div class="col-auto">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Voltar para Estudantes
                            </a>
                        </div>
                        <div class="col-auto">
                            <a asp-action="AllSubjects" class="btn btn-success">
                                <i class="fas fa-graduation-cap me-1"></i>Ver Todas as Matérias
                            </a>
                        </div>
                        <div class="col-auto">
                            <form asp-action="CleanOrphanedSubjects" method="post" class="d-inline">
                                <button type="submit" class="btn btn-warning"
                                        onclick="return confirm('Isso irá remover matérias sem curso válido. Continuar?')">
                                    <i class="fas fa-broom me-1"></i>Limpar Matérias Órfãs
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Courses Table -->
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h4 class="card-title mb-0 text-dark">
                        <i class="fas fa-list me-2"></i>Lista de Cursos
                    </h4>
                </div>
                <div class="card-body p-0">
                    @if (!Model.Any())
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-book fa-3x text-muted mb-3"></i>
                            <h4 class="text-muted">Nenhum curso cadastrado</h4>
                            <a asp-action="CreateCourse" class="btn btn-primary mt-3">
                                <i class="fas fa-plus-circle me-1"></i>Cadastrar Primeiro Curso
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover table-striped mb-0">
                                <thead class="table-dark">
                                    <tr>
                                        <th><i class="fas fa-hashtag me-1"></i>ID</th>
                                        <th><i class="fas fa-book me-1"></i>Nome do Curso</th>
                                        <th><i class="fas fa-graduation-cap me-1"></i>Matérias</th>
                                        <th><i class="fas fa-cogs me-1"></i>Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var course in Model)
                                    {
                                        <tr>
                                            <td class="fw-bold">#@course.ID</td>
                                            <td>
                                                <h6 class="mb-1">@course.Name</h6>
                                            </td>
                                            <td>
                                                @if (course.Subjects != null && course.Subjects.Any())
                                                {
                                                    <div class="d-flex align-items-center">
                                                        <span class="badge bg-success me-2">@course.Subjects.Count matérias</span>
                                                        <a asp-action="Subjects" asp-route-courseId="@course.ID" class="btn btn-info btn-sm">
                                                            <i class="fas fa-eye me-1"></i>Ver
                                                        </a>
                                                    </div>
                                                    <small class="text-muted mt-1 d-block">
                                                        @string.Join(", ", course.Subjects.Take(3).Select(s => s.Name))
                                                        @if (course.Subjects.Count > 3)
                                                        {
                                                            <span>... e mais @(course.Subjects.Count - 3)</span>
                                                        }
                                                    </small>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">Nenhuma matéria</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="EditCourse" asp-route-id="@course.ID" class="btn btn-warning btn-sm">
                                                        <i class="fas fa-edit me-1"></i>Editar
                                                    </a>
                                                    <form asp-action="DeleteCourse" method="post" class="d-inline">
                                                        <input type="hidden" name="id" value="@course.ID" />
                                                        <button type="submit" class="btn btn-danger btn-sm"
                                                                onclick="return confirm('Tem certeza que deseja excluir este curso?')">
                                                            <i class="fas fa-trash me-1"></i>Excluir
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-info {
        background: linear-gradient(135deg, #17a2b8 0%, #138496 100%);
    }

    .badge {
        font-size: 0.75em;
    }

    .table td {
        vertical-align: middle;
    }
</style>