@model ICollection<Banco_II.Models.Student>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container-fluid mt-4">
    <div class="row">
        <div class="col-12">
            <!-- Header Card -->
            <div class="card shadow-sm mb-4 bg-gradient-primary text-white">
                <div class="card-body text-center py-4">
                    <h1 class="display-4 mb-2">
                        <i class="fas fa-users me-3"></i>@Model.Count Estudante(s) Cadastrados
                    </h1>
                    <p class="lead mb-0">Sistema de Gerenciamento Acadêmico</p>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-cogs me-2"></i>Ações Rápidas
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-2 col-6">
                            <a asp-controller="Home" asp-action="Create" class="btn btn-primary w-100">
                                <i class="fas fa-user-plus me-1"></i>Novo Estudante
                            </a>
                        </div>
                        <div class="col-md-2 col-6">
                            <a asp-controller="Home" asp-action="Courses" class="btn btn-info w-100">
                                <i class="fas fa-book me-1"></i>Ver Cursos
                            </a>
                        </div>
                        <div class="col-md-2 col-6">
                            <a asp-controller="Home" asp-action="StudentCourses" class="btn btn-warning w-100">
                                <i class="fas fa-clipboard-list me-1"></i>Matrículas
                            </a>
                        </div>
                        <div class="col-md-2 col-6">
                            <a asp-controller="Home" asp-action="AllSubjects" class="btn btn-success w-100">
                                <i class="fas fa-graduation-cap me-1"></i>Matérias
                            </a>
                        </div>
                        <div class="col-md-2 col-6">
                            <a asp-controller="Home" asp-action="CheckData" class="btn btn-secondary w-100">
                                <i class="fas fa-database me-1"></i>Ver Dados
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Students Table -->
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h4 class="card-title mb-0 text-dark">
                        <i class="fas fa-list me-2"></i>Lista de Estudantes
                    </h4>
                </div>
                <div class="card-body p-0">
                    @if (!Model.Any())
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-user-slash fa-3x text-muted mb-3"></i>
                            <h4 class="text-muted">Nenhum estudante cadastrado</h4>
                            <a asp-controller="Home" asp-action="Create" class="btn btn-primary mt-3">
                                <i class="fas fa-user-plus me-1"></i>Cadastrar Primeiro Estudante
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover table-striped mb-0">
                                <thead class="table-dark">
                                    <tr>
                                        <th><i class="fas fa-id-card me-1"></i>ID</th>
                                        <th><i class="fas fa-user me-1"></i>Nome</th>
                                        <th><i class="fas fa-user-tag me-1"></i>Sobrenome</th>
                                        <th><i class="fas fa-calendar-alt me-1"></i>Data Matrícula</th>
                                        <th><i class="fas fa-actions me-1"></i>Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var s in Model)
                                    {
                                        <tr>
                                            <td class="fw-bold">#@s.ID</td>
                                            <td>@s.FirstMidName</td>
                                            <td>@s.LastName</td>
                                            <td>
                                                <span class="badge bg-info">
                                                    <i class="fas fa-calendar me-1"></i>@s.EnrollmentDate.ToShortDateString()
                                                </span>
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Edit" asp-route-id="@s.ID" class="btn btn-warning btn-sm">
                                                        <i class="fas fa-edit me-1"></i>Editar
                                                    </a>
                                                    <form asp-action="Delete" method="post" class="d-inline">
                                                        <input type="hidden" name="id" value="@s.ID">
                                                        <button type="submit" class="btn btn-danger btn-sm"
                                                                onclick="return confirm('Tem certeza que deseja excluir este estudante?')">
                                                            <i class="fas fa-trash me-1"></i>Excluir
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
    }

    .table th {
        border-top: none;
        font-weight: 600;
    }

    .btn {
        border-radius: 0.375rem;
        transition: all 0.3s ease;
    }

    .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0,0,0,0.2);
    }
</style>