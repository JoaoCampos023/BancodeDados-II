@model Banco_II.Models.StudentCourses
@{
    ViewData["Title"] = "Nova Matrícula";
    var students = ViewBag.Students as IEnumerable<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>;
    var courses = ViewBag.Courses as IEnumerable<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>;
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-user-plus me-2"></i>Nova Matrícula
                    </h3>
                </div>
                <div class="card-body">

                    @if (students == null || courses == null)
                    {
                        <div class="alert alert-warning text-center">
                            <i class="fas fa-exclamation-triangle fa-2x mb-3"></i>
                            <h4>Erro ao carregar dados</h4>
                            <p>Não foi possível carregar a lista de estudantes ou cursos.</p>
                            <p>Verifique se existem estudantes e cursos cadastrados.</p>
                            <div class="mt-3">
                                <a asp-action="Index" class="btn btn-primary me-2">
                                    <i class="fas fa-users me-1"></i>Cadastrar Estudantes
                                </a>
                                <a asp-action="Courses" class="btn btn-primary">
                                    <i class="fas fa-book me-1"></i>Cadastrar Cursos
                                </a>
                            </div>
                        </div>
                    }
                    else
                    {
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger">
                                <h5><i class="fas fa-exclamation-circle me-1"></i>Erros de validação:</h5>
                                <ul class="mb-0">
                                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                    {
                                        <li>@error.ErrorMessage</li>
                                    }
                                </ul>
                            </div>
                        }

                        <form asp-action="CreateStudentCourse">
                            <div class="form-group mb-4">
                                <label asp-for="StudentID" class="control-label fw-bold">Estudante</label>
                                <select asp-for="StudentID" class="form-select">
                                    <option value="">-- Selecione o Estudante --</option>
                                    @foreach (var student in students)
                                    {
                                        <option value="@student.Value">@student.Text</option>
                                    }
                                </select>
                                <span asp-validation-for="StudentID" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-4">
                                <label asp-for="CourseID" class="control-label fw-bold">Curso</label>
                                <select asp-for="CourseID" class="form-select">
                                    <option value="">-- Selecione o Curso --</option>
                                    @foreach (var course in courses)
                                    {
                                        <option value="@course.Value">@course.Text</option>
                                    }
                                </select>
                                <span asp-validation-for="CourseID" class="text-danger"></span>
                            </div>

                            <div class="form-group mt-4 text-center">
                                <button type="submit" class="btn btn-success btn-lg me-3">
                                    <i class="fas fa-user-check me-1"></i>Matricular
                                </button>
                                <a asp-action="StudentCourses" class="btn btn-secondary btn-lg">
                                    <i class="fas fa-times me-1"></i>Cancelar
                                </a>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}