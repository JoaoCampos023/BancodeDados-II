@model Banco_II.Models.Subject
@{
    ViewData["Title"] = "Nova Matéria";
}

<h1>Nova Matéria</h1>

<form asp-action="CreateIndependentSubject">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Name" class="control-label">Nome da Matéria *</label>
        <input asp-for="Name" class="form-control" placeholder="Digite o nome da matéria" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CourseID" class="control-label">Curso *</label>
        <select asp-for="CourseID" class="form-control" asp-items="ViewBag.Courses">
            <option value="">-- Selecione o Curso --</option>
        </select>
        <span asp-validation-for="CourseID" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Criar Matéria</button>
        <a asp-action="AllSubjects" class="btn btn-secondary">Cancelar</a>
        <a asp-action="Courses" class="btn btn-info">Ver Cursos</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}