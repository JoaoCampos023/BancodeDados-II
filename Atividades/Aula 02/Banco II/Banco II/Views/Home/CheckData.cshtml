@{
    ViewData["Title"] = "Verificar Dados";
}

<h2>Verificar Dados do Sistema</h2>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3>Estudantes Cadastrados</h3>
            </div>
            <div class="card-body">
                <p>Total de estudantes: @ViewBag.StudentCount</p>
                <ul>
                    @foreach (var student in ViewBag.Students)
                    {
                        <li>@student.FullName (ID: @student.ID)</li>
                    }
                </ul>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3>Cursos Cadastrados</h3>
            </div>
            <div class="card-body">
                <p>Total de cursos: @ViewBag.CourseCount</p>
                <ul>
                    @foreach (var course in ViewBag.Courses)
                    {
                        <li>@course.Name (ID: @course.ID)</li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Create" class="btn btn-primary">Cadastrar Estudante</a>
    <a asp-action="CreateCourse" class="btn btn-primary">Cadastrar Curso</a>
    <a asp-action="CreateStudentCourse" class="btn btn-success">Tentar Matrícula Novamente</a>
</div>