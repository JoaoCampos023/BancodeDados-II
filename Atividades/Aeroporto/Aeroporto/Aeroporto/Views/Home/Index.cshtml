<!-- Views/Home/Index.cshtml -->
@model SistemaAereo.Controllers.DashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
}

<div class="page-header">
    <h1 class="page-title">Dashboard</h1>
    <p class="page-subtitle">Visão geral do sistema de gestão aérea</p>
</div>

<div class="row g-4 mb-5">
    <div class="col-xl-3 col-md-6">
        <div class="stat-card" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
            <div class="icon">
                <i class="fas fa-plane-departure"></i>
            </div>
            <div class="number">@Model.TotalVoos</div>
            <div class="label">Voos Ativos</div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="stat-card" style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
            <div class="icon">
                <i class="fas fa-users"></i>
            </div>
            <div class="number">@Model.TotalClientes</div>
            <div class="label">Clientes</div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="stat-card" style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);">
            <div class="icon">
                <i class="fas fa-plane"></i>
            </div>
            <div class="number">@Model.TotalAeronaves</div>
            <div class="label">Aeronaves</div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6">
        <div class="stat-card" style="background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);">
            <div class="icon">
                <i class="fas fa-building"></i>
            </div>
            <div class="number">@Model.TotalAeroportos</div>
            <div class="label">Aeroportos</div>
        </div>
    </div>
</div>

<div class="row g-4">
    <div class="col-lg-8">
        <div class="card-modern">
            <div class="card-header-modern d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-plane-departure text-primary me-2"></i> Próximos Voos</h5>
                <a href="#" class="btn btn-sm btn-primary-modern">Ver Todos</a>
            </div>
            <div class="card-body-modern">
                @if (Model.ProximosVoos.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-modern">
                            <thead>
                                <tr>
                                    <th>Número</th>
                                    <th>Origem</th>
                                    <th>Destino</th>
                                    <th>Saída</th>
                                    <th>Aeronave</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var voo in Model.ProximosVoos)
                                {
                                    <tr>
                                        <td><strong>@voo.NumeroVoo</strong></td>
                                        <td>@voo.AeroportoOrigem?.Nome</td>
                                        <td>@voo.AeroportoDestino?.Nome</td>
                                        <td>@voo.HorarioSaida.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td>@voo.Aeronave?.TipoAeronave</td>
                                        <td><span class="badge bg-success">Confirmado</span></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-plane-slash fa-3x text-muted mb-3"></i>
                        <p class="text-muted">Nenhum voo próximo encontrado.</p>
                    </div>
                }
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card-modern">
            <div class="card-header-modern">
                <h5 class="mb-0"><i class="fas fa-rocket text-primary me-2"></i> Ações Rápidas</h5>
            </div>
            <div class="card-body-modern">
                <div class="d-grid gap-3">
                    <a asp-action="CriarVoo" class="btn btn-primary-modern btn-lg">
                        <i class="fas fa-plus me-2"></i> Novo Voo
                    </a>
                    <a asp-action="CriarCliente" class="btn btn-success btn-lg" style="background: var(--success);">
                        <i class="fas fa-user-plus me-2"></i> Novo Cliente
                    </a>
                    <a asp-action="CriarAeronave" class="btn btn-warning btn-lg" style="background: var(--warning);">
                        <i class="fas fa-plane me-2"></i> Nova Aeronave
                    </a>
                    <a asp-action="CriarAeroporto" class="btn btn-info btn-lg" style="background: var(--info);">
                        <i class="fas fa-building me-2"></i> Novo Aeroporto
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>