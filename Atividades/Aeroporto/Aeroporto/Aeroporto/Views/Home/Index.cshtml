<!-- Views/Home/Index.cshtml -->
@model SistemaAereo.Controllers.DashboardViewModel 

@{
    ViewData["Title"] = "Dashboard";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><i class="fas fa-tachometer-alt"></i> Dashboard</h1>
</div>

<div class="row">
    <div class="col-md-3 mb-4">
        <div class="card text-white bg-primary dashboard-card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@Model.TotalVoos</h4>
                        <p class="card-text">Voos</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-plane-departure fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-4">
        <div class="card text-white bg-success dashboard-card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@Model.TotalClientes</h4>
                        <p class="card-text">Clientes</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-users fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-4">
        <div class="card text-white bg-warning dashboard-card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@Model.TotalAeronaves</h4>
                        <p class="card-text">Aeronaves</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-plane fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 mb-4">
        <div class="card text-white bg-info dashboard-card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@Model.TotalAeroportos</h4>
                        <p class="card-text">Aeroportos</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-building fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-plane-departure"></i> Próximos Voos</h5>
            </div>
            <div class="card-body">
                @if (Model.ProximosVoos.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Número</th>
                                    <th>Origem</th>
                                    <th>Destino</th>
                                    <th>Saída</th>
                                    <th>Aeronave</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var voo in Model.ProximosVoos)
                                {
                                    <tr>
                                        <td>@voo.NumeroVoo</td>
                                        <td>@voo.AeroportoOrigem?.Nome</td>
                                        <td>@voo.AeroportoDestino?.Nome</td>
                                        <td>@voo.HorarioSaida.ToString("dd/MM/yyyy HH:mm")</td>
                                        <td>@voo.Aeronave?.TipoAeronave</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted">Nenhum voo próximo encontrado.</p>
                }
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-rocket"></i> Ações Rápidas</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-action="CriarVoo" class="btn btn-primary btn-sm">
                        <i class="fas fa-plus"></i> Novo Voo
                    </a>
                    <a asp-action="CriarCliente" class="btn btn-success btn-sm">
                        <i class="fas fa-user-plus"></i> Novo Cliente
                    </a>
                    <a asp-action="CriarAeronave" class="btn btn-warning btn-sm">
                        <i class="fas fa-plane"></i> Nova Aeronave
                    </a>
                    <a asp-action="CriarAeroporto" class="btn btn-info btn-sm">
                        <i class="fas fa-building"></i> Novo Aeroporto
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>