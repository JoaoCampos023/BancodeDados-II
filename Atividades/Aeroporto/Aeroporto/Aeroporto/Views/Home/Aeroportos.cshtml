<!-- Views/Home/Aeroportos.cshtml -->
@model IEnumerable<SistemaAereo.Models.Aeroporto>

@{
    ViewData["Title"] = "Aeroportos";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><i class="fas fa-building"></i> Aeroportos</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a asp-action="CriarAeroporto" class="btn btn-success">
            <i class="fas fa-plus"></i> Novo Aeroporto
        </a>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Nome</th>
                <th>Código IATA</th>
                <th>Cidade</th>
                <th>País</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var aeroporto in Model)
            {
                <tr>
                    <td>@aeroporto.Nome</td>
                    <td>@aeroporto.CodigoIATA</td>
                    <td>@aeroporto.Cidade</td>
                    <td>@aeroporto.Pais</td>
                    <td>
                        <a asp-action="EditarAeroporto" asp-route-id="@aeroporto.AeroportoId" class="btn btn-warning btn-sm">
                            <i class="fas fa-edit"></i>
                        </a>
                        <form asp-action="ExcluirAeroporto" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@aeroporto.AeroportoId" />
                            <button type="submit" class="btn btn-danger btn-sm"
                                    onclick="return confirm('Tem certeza que deseja excluir este aeroporto?')">
                                <i class="fas fa-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info mt-3">
        <i class="fas fa-info-circle"></i> Nenhum aeroporto cadastrado.
        <a asp-action="CriarAeroporto" class="alert-link">Clique aqui para cadastrar o primeiro aeroporto.</a>
    </div>
}