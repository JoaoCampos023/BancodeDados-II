<!-- Views/Home/EditarAeroporto.cshtml -->
@model SistemaAereo.Models.Aeroporto

@{
    ViewData["Title"] = "Editar Aeroporto";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><i class="fas fa-edit"></i> Editar Aeroporto</h1>
</div>

<div class="row">
    <div class="col-md-6">
        <form asp-action="EditarAeroporto">
            <input type="hidden" asp-for="AeroportoId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Nome" class="control-label">Nome do Aeroporto</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CodigoIATA" class="control-label">Código IATA</label>
                <input asp-for="CodigoIATA" class="form-control" maxlength="3" style="text-transform:uppercase" />
                <span asp-validation-for="CodigoIATA" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Cidade" class="control-label">Cidade</label>
                <input asp-for="Cidade" class="form-control" />
                <span asp-validation-for="Cidade" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Pais" class="control-label">País</label>
                <input asp-for="Pais" class="form-control" />
                <span asp-validation-for="Pais" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save"></i> Salvar Alterações
                </button>
                <a asp-action="Aeroportos" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}