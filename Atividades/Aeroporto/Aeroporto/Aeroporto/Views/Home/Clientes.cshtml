<!-- Views/Home/Clientes.cshtml -->
@model IEnumerable<ClientePreferencial>

@{
    ViewData["Title"] = "Clientes Preferenciais";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><i class="fas fa-users"></i> Clientes Preferenciais</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a asp-action="CriarCliente" class="btn btn-success me-2">
            <i class="fas fa-user-plus"></i> Novo Cliente
        </a>
        <a asp-action="MalaDireta" class="btn btn-info">
            <i class="fas fa-envelope"></i> Mala Direta
        </a>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Nome</th>
                <th>Email</th>
                <th>Telefone</th>
                <th>Cidade</th>
                <th>Data Cadastro</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cliente in Model)
            {
                <tr>
                    <td>@cliente.Nome</td>
                    <td>@cliente.Email</td>
                    <td>@cliente.Telefone</td>
                    <td>@cliente.Cidade</td>
                    <td>@cliente.DataCadastro.ToString("dd/MM/yyyy")</td>
                    <td>
                        <a asp-action="EditarCliente" asp-route-id="@cliente.ClienteId" class="btn btn-warning btn-sm">
                            <i class="fas fa-edit"></i>
                        </a>
                        <form asp-action="ExcluirCliente" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@cliente.ClienteId" />
                            <button type="submit" class="btn btn-danger btn-sm"
                                    onclick="return confirm('Tem certeza que deseja excluir este cliente?')">
                                <i class="fas fa-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>