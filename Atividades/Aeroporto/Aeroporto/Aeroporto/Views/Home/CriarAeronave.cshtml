<!-- Views/Home/CriarAeronave.cshtml -->
@model SistemaAereo.Models.Aeronave

@{
    ViewData["Title"] = "Nova Aeronave";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><i class="fas fa-plane"></i> Nova Aeronave</h1>
</div>

<div class="row">
    <div class="col-md-6">
        <form asp-action="CriarAeronave">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="TipoAeronave" class="control-label">Tipo da Aeronave</label>
                <input asp-for="TipoAeronave" class="form-control" placeholder="Ex: Boeing 737, Airbus A320" />
                <span asp-validation-for="TipoAeronave" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="NumeroPoltronas" class="control-label">Número de Poltronas</label>
                <input asp-for="NumeroPoltronas" type="number" class="form-control" min="1" max="500" />
                <span asp-validation-for="NumeroPoltronas" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success">
                    <i class="fas fa-save"></i> Cadastrar Aeronave
                </button>
                <a asp-action="Aeronaves" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}