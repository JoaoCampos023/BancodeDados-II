<!-- Views/Home/Voos.cshtml -->
@model IEnumerable<SistemaAereo.Models.Voo>

@{
    ViewData["Title"] = "Voos";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2"><i class="fas fa-plane-departure"></i> Voos</h1>
    <div class="btn-toolbar mb-2 mb-md-0">
        <a asp-action="CriarVoo" class="btn btn-success">
            <i class="fas fa-plus"></i> Novo Voo
        </a>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Número</th>
                <th>Origem</th>
                <th>Destino</th>
                <th>Saída</th>
                <th>Chegada</th>
                <th>Aeronave</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var voo in Model)
            {
                <tr>
                    <td>@voo.NumeroVoo</td>
                    <td>@voo.AeroportoOrigem?.Nome</td>
                    <td>@voo.AeroportoDestino?.Nome</td>
                    <td>@voo.HorarioSaida.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@voo.HorarioChegadaPrevisto.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@voo.Aeronave?.TipoAeronave</td>
                    <td>
                        <a asp-action="DetalhesVoo" asp-route-id="@voo.VooId" class="btn btn-info btn-sm">
                            <i class="fas fa-eye"></i>
                        </a>
                        <a asp-action="EditarVoo" asp-route-id="@voo.VooId" class="btn btn-warning btn-sm">
                            <i class="fas fa-edit"></i>
                        </a>
                        <form asp-action="ExcluirVoo" method="post" class="d-inline">
                            <input type="hidden" name="id" value="@voo.VooId" />
                            <button type="submit" class="btn btn-danger btn-sm"
                                    onclick="return confirm('Tem certeza que deseja excluir este voo?')">
                                <i class="fas fa-trash"></i>
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info mt-3">
        <i class="fas fa-info-circle"></i> Nenhum voo cadastrado.
        <a asp-action="CriarVoo" class="alert-link">Clique aqui para cadastrar o primeiro voo.</a>
    </div>
}